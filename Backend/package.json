{
  "name": "humanity-charity-platform",
  "version": "1.0.0",
  "description": "Humanity - Interactive charity platform for donations and collaboration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev-server-only": "nodemon server.js",
    "dev-client-only": "cd client && npm start",
    "server": "nodemon server.js --watch server.js --watch routes --watch models --watch config --ext js,json,env",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client",
    "clean": "cd client && rmdir /s /q node_modules && del package-lock.json && cd .. && rmdir /s /q node_modules && del package-lock.json",
    "fresh-install": "npm run clean && npm run install-all",
    "open": "start http://localhost:5000 && npm start"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "path": "^0.12.7",
    "socket.io": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "charity",
    "donation",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
